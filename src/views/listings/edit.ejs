<%layout("../layouts/boilerplate.ejs")%>

<body>
    <!-- Edit Form -->
    <div class="form-container mt-4" id="editForm">
        <div class="form-card mt-4">
            <div class="form-header">
                <h3 class="form-title">Edit Your Listing</h3>
                <p class="form-subtitle">Update your listing details</p>
            </div>
            
            <form action="/listings/<%=listing._id%>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <!-- Title Field -->
                <div class="form-floating">
                    <input type="text" name="listing[title]" class="form-control" id="editTitle" 
                           placeholder="Enter listing title" value="<%=listing.title%>" required>
                    <label for="editTitle">Listing Title</label>
                    <i class="fas fa-home form-icon"></i>
                </div>

                <!-- Description Field -->
                <div class="form-floating">
                    <textarea name="listing[description]" class="form-control" id="editDescription" 
                              placeholder="Describe your place" required><%=listing.description%></textarea>
                    <label for="editDescription">Description</label>
                    <i class="fas fa-align-left form-icon"></i>
                </div>

                <!-- Current Image Preview -->
                <div class="image-preview-container form-floating">
                    <h5 class="img-preview-title">Current Image</h5>
                    <img src="<%=originalUrl%>" alt="<%=listing.title%>" class="preview-image">
                </div>

                <!-- Image Field -->
                <div class="form-floating" id="img-upload">
                    <input type="file" name="listing[image]" class="form-control" id="editImage">
                    <label for="editImage">Upload New Image</label>
                    <i class="fas fa-image form-icon"></i>
                </div>

                <!-- Price and Location Row -->
                <div class="form-row">
                    <div class="form-floating col-price">
                        <input type="number" name="listing[price]" class="form-control" id="editPrice" 
                               placeholder="Enter price" value="<%=listing.price%>" min="0" step="0.01" required>
                        <label for="editPrice">Price (&#8377;)</label>
                        <i class="fas fa-rupee-sign form-icon"></i>
                    </div>
                    
                    <div class="form-floating col-location">
                        <input type="text" name="listing[location]" class="form-control" id="editLocation" 
                               placeholder="Enter location" value="<%=listing.location%>" required>
                        <label for="editLocation">Location</label>
                        <i class="fas fa-map-marker-alt form-icon"></i>
                    </div>
                </div>

                <!-- Country Field -->
                <div class="form-floating">
                    <input type="text" name="listing[country]" class="form-control" id="editCountry" 
                           placeholder="Enter country" value="<%=listing.country%>" required>
                    <label for="editCountry">Country</label>
                    <i class="fas fa-globe form-icon"></i>
                </div>

                <button type="submit" class="submit-btn">
                    <i class="fas fa-save me-2"></i>
                    Update Listing
                </button>
            </form>
        </div>
    </div>
</body>