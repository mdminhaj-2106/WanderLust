<%layout("../layouts/boilerplate.ejs")%>
<body>
    <!-- Demo Switcher -->
    <div class="demo-switcher">
        <button class="btn btn-outline-light btn-sm" onclick="showCreateForm()">
            <i class="fas fa-plus"></i> Create
        </button>
        <button class="btn btn-outline-light btn-sm" onclick="showEditForm()">
            <i class="fas fa-edit"></i> Edit
        </button>
    </div>

    <!-- Create Form -->
    <div class="form-container mt-4" id="createForm">
        <div class="form-card">
            <div class="form-header">
                <h3 class="form-title">Create New Listing</h3>
                <p class="form-subtitle">Share your amazing place with the world</p>
            </div>
            
            <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
                <!-- Title Field -->
                <div class="form-floating">
                    <input type="text" name="listing[title]" class="form-control" id="createTitle" placeholder="Enter listing title" required>
                    <label for="createTitle">Listing Title</label>
                    <i class="fas fa-home form-icon"></i>
                </div>

                <!-- Description Field -->
                <div class="form-floating">
                    <textarea name="listing[description]" class="form-control" id="createDescription" placeholder="Describe your place" required></textarea>
                    <label for="createDescription">Description</label>
                    <i class="fas fa-align-left form-icon"></i>
                </div>

                <!-- Image Field -->
                <div class="form-floating" id="img-upload">
                    <input type="file" name="listing[image]" class="form-control" id="createImage" placeholder="Paste image URL here" required>
                    <label for="createImage" class="form-label">Upload Listing Image</label>
                    <i class="fas fa-image form-icon"></i>
                </div>

                <!-- Price and Location Row -->
                <div class="form-row ">
                    <div class="form-floating col-price">
                        <input type="number" name="listing[price]" class="form-control" id="createPrice" placeholder="Enter price" required min="0" step="0.01">
                        <label for="createPrice">Price (&#8377;)</label>
                        <i class="fas fa-rupee-sign form-icon"></i>
                    </div>
                    
                    <div class="form-floating col-location">
                        <input type="text" name="listing[location]" class="form-control" id="createLocation" placeholder="Enter location" required>
                        <label for="createLocation">Location</label>
                        <i class="fas fa-map-marker-alt form-icon"></i>
                    </div>
                </div>

                <!-- Country Field -->
                <div class="form-floating">
                    <input type="text" name="listing[country]" class="form-control" id="createCountry" placeholder="Enter country" required>
                    <label for="createCountry">Country</label>
                    <i class="fas fa-globe form-icon"></i>
                </div>

                <button type="submit" class="submit-btn">
                    <i class="fas fa-plus-circle me-2"></i>
                    Create Listing
                </button>
            </form>
        </div>
    </div>

    
    
  